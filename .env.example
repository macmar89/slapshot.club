NODE_ENV=development    # development, test, production
PAYLOAD_PUSH=false

# Database & CMS
DATABASE_URL=postgres://user:password@127.0.0.1:5432/slapshot_db
PAYLOAD_SECRET=YOUR_PAYLOAD_SECRET_HERE

# OneSignal
NEXT_PUBLIC_ONESIGNAL_APP_ID=YOUR_ONESIGNAL_APP_ID_HERE
ONESIGNAL_REST_API_KEY=YOUR_ONESIGNAL_REST_API_KEY_HERE

# Media Storage (R2/S3)
R2_ACCESS_KEY_ID=YOUR_R2_ACCESS_KEY_ID
R2_SECRET_ACCESS_KEY=YOUR_R2_SECRET_ACCESS_KEY
R2_REGION=auto
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET=your-bucket-name
NEXT_PUBLIC_UPLOAD_URL=https://your-public-bucket-url.r2.dev

# Server & Security
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
NEXT_PUBLIC_TURNSTILE_SITE_KEY=YOUR_TURNSTILE_SITE_KEY
TURNSTILE_SECRET_KEY=YOUR_TURNSTILE_SECRET_KEY
NEXT_PUBLIC_ENABLE_TURNSTILE=false

# Email (Brevo)
BREVO_API_KEY=YOUR_BREVO_API_KEY_HERE
BREVO_SENDER_NAME="Slapshot Club"
BREVO_SENDER_EMAIL="referee@slapshot.club"

# Features
REGISTRER_PROMO=false
SESSION_EXPIRATION_SECONDS=2592000

# Hockey API
HOCKEY_API_KEY=YOUR_HOCKEY_API_KEY_HERE
HOCKEY_API_URL=https://v1.hockey.api-sports.io
HOCKEY_API_DISABLE_REFRESH=false